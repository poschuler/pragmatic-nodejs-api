  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@tsconfig/node24": "^24.0.3",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poschuler/pragmatic-nodejs-api.git"
  },
  "bugs": {
